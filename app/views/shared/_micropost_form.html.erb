<%= form_for(@micropost, html: { multipart: true }) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new micropost..." %>
  </div>
  <p><b>Attachment</b><br />
  	<%= f.file_field :attach %>
  </p>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>