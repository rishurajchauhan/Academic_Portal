    <% for i in 0..((@text.length/2)-1) %>
      <% @collabs[i]=@text.slice!(0..1) %>
    <% end %>
    <% @collabs1=[] %>
    <% for c in @collabs %>
      <% c[0]="<h5><u>"+c[0]+"</u></h5>" %>
      <% c[1]="<h6> -"+c[1]+"</h6><br />" %>
      <% @collabs1.push(c.flatten) %>
    <% end %>
    <% @profile.collaborators=@collabs1.join %>

    
    <% @text=@profile.subjects.split(/\r?\n/) %>
    <% for i in 0..@text.length-1 %>
      <% @class=@text[i].split(',')[1] %>
