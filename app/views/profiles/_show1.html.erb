      <% @text[i]="<br />"+"<li style='color:#000; font-size: 15px'>"+@text[i]+": "+@class+"</li>"+"<br />" %>
    <% end %>
    <% @profile.subjects="<ul>"+@text.join+"</ul>" %>
  
    <% @text=@profile.current_students.split(/\r?\n/) %>
