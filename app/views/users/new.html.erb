<div class="container">
<% provide(:title, 'Sign up') %>
<% if !(signed_in? && current_user.admin?) %>
<h1>Sign up</h1>
<% else %>
<h1>Create new Class</h1>
<% end %>


<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :img %>
      <%= f.text_field :img %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>
      <br /> 
      <br />

    <% if !(signed_in? && current_user.admin?) %>
    <div style="display:inline; padding-left:160px" id = "desig">
      
      <%= f.radio_button :designation, "teacher", :id => 'teachers' %> Teacher   
      
      &nbsp; &nbsp; 
        
      <%= f.radio_button :designation, "student", :id => 'students' %> Student <br /> 
    
      <% else %>
      <%= f.hidden_field :designation, value: "class" %> 
      <%= f.label :group_url %>
      <%= f.text_field :group_url %>
      <% end %>
      <div id="enter_id">
        <label for="other_id">Enter Unique ID:</label>
        <%= f.text_field :uid %>
        <br />
      </div>
      
      
    
    
      <div id="button" style="padding-left: 160px">
       <% if !(signed_in? && current_user.admin?) %> 
      <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
      <% else %>
      <%= f.submit "Create class", class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
</div>
</html>
